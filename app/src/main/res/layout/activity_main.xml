<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#209d1fe4"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="499dp"
        android:layout_height="111dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="left"
        android:layout_marginLeft="7.0dp"
        android:scaleType="fitXY"
        android:layout_weight="2"
        android:src="@drawable/intelliq" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/my_title_font"
        android:text="The IQ Breaker"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textSize="35dp" />

    <Button
        android:id="@+id/btn_registration"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:shadowColor="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Sign Up"
        android:textSize="23dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Log in"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textSize="23dp"
        android:background="@drawable/button"
        android:shadowColor="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>

    <Button
        android:id="@+id/btn_stats"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Game Statistics"
        android:layout_weight="1"
        android:textSize="23dp"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:shadowColor="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>
    <Button
        android:id="@+id/btn_facts"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Facts on IQ"
        android:textStyle="bold"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:textSize="23dp"
        android:shadowColor="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>


</LinearLayout>